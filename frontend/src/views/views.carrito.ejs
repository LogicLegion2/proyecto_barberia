    <script>
        function aumentarValor() {
            let unidades = parseInt(document.getElementById('unidades').value);
            unidades++;
            document.getElementById('unidades').value = unidades;
        }

        function disminuirValor() {
            let unidades = parseInt(document.getElementById('unidades').value);
            if (unidades > 1) {
                unidades--;
                document.getElementById('unidades').value = unidades;
            }
        }

        function actualizarTotal() {
            let unidades = parseInt(document.getElementById('unidades').value);
            let precioUnidad = parseFloat(document.getElementById('precioUnidad').value);
            let total = unidades * precioUnidad;
            document.getElementById('total').value = total.toFixed(2);
        }

    </script>
