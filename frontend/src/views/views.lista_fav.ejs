<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Barber's Brothers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style_principal.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Aleo:ital,wght@0,100..900;1,100..900&family=Quicksand:wght@300&display=swap"
        rel="stylesheet">
</head>

<body>
    <div class="fondo container-fluid row">
        <nav class="navbar navbar-dark">
            <div class="container-fluid d-flex flex-row-reverse">
                <a class="navbar-brand"></a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar"
                    aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header menu-top">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu Cuenta</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body menu-top">
                        <div class="d-grid gap-3">
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/reservar">Reservar</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/favorito">Lista Favoritos</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/home">PÃ¡gina Principal</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/reserva">Reservas</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/entrega">Entregas</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/reembolso">Reembolsos</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/cita">Historial de Reseras</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/compra">Historial de Compras</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/carrito">Carrito de Compras</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                            <li
                                class="nav-item border-bottom pb-2 border-opacity-75 border-secondary d-flex justify-content-between">
                                <a class="nav-link " href="/cliente/perfil">Mi cuenta</a><i
                                    class="bi bi-chevron-right"></i>
                            </li>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Lista de barberos -->
        <section class="barbero col-md-6 col-lg-3">
            <h2 class="titulo mb-4 text-center titulo text-light fw-bold">Barberos</h2>
            <% if (favoritos.barbero && favoritos.barbero.length> 0) { %>
                <ul class="listas ps-0 d-flex flex-column align-items-center lista-barb">
                    <% favoritos.barbero.forEach(barbero=> { %>
                        <li class="opc">
                            <a href="/cliente/barbero/<%= barbero.id %>" class="btn-barb">
                                <div
                                    class="tarjeta justify-content-around tarjeta-sma card d-flex align-items-center mb-5 p-2 rounded-4">
                                    <button class="btn-fav btn align-self-start position-absolute p-0"><img
                                            src="./img/amor.png" alt="" class="icon-fav"></button>
                                    <img src="data:image/jpeg;base64,<%= barbero.img64 %>" alt="" class="foto rounded-4 mb-2">
                                    <p
                                        class="nombre z-1 w-100 text-center text-light fs-5 fw-bold mb-2 pb-2 border-bottom border-2 border-light">
                                        <%= barbero.barbero %>
                                    </p>
                                    <p class="desc fw-light z-1 card-text text-break text-light text-center">
                                        <%= barbero.descripcion %>
                                    </p>
                                </div>
                            </a>
                        </li>
                        <% }); %>
                </ul>
                <% } else { %>
                    <p class="w-100 text-center text-white fs-5 mt-5 pt-5">No existen barberos favoritos.</p>
                    <% } %>
        </section>
        <!-- Lista de productos -->
        <section class="producto col-md-6 col-lg-3">
            <h2 class="titulo mb-4 text-center titulo text-light fw-bold">Productos</h2>
            <% if (favoritos.producto && favoritos.producto.length> 0) { %>
                <ul class="listas ps-0 d-flex flex-column align-items-center lista-prod">
                    <% favoritos.producto.forEach(producto=> { %>
                        <li class="opc">
                            <div
                                class="tarjeta justify-content-around tarjeta-sma card d-flex align-items-center mb-5 p-2 rounded-4">
                                <button class="btn-fav btn align-self-start position-absolute p-0"><img
                                        src="./img/amor.png" alt="" class="icon-fav"></button>
                                <img src="data:image/jpeg;base64,<%= producto.img64 %>" alt="" class="foto rounded-4 mb-2">
                                <p
                                    class="nombre z-1 w-100 text-center text-light fs-5 fw-bold mb-2 pb-2 border-bottom border-2 border-light">
                                    <%= producto.producto %>
                                </p>
                                <p class="desc fw-light z-1 card-text text-break text-light text-center">
                                    <%= producto.descripcion %>
                                </p>
                            </div>
                        </li>
                        <% }); %>
                </ul>
                <% } else { %>
                    <p class="w-100 text-center text-white fs-5 mt-5 pt-5">No existen productos favoritos.</p>
                    <% } %>
        </section>
        <!-- Lista de servicios -->
        <section class="servicio col-md-6 col-lg-3">
            <h2 class="titulo mb-4 text-center titulo text-light fw-bold">Servicios</h2>
            <% if (favoritos.servicio && favoritos.servicio.length> 0) { %>
                <ul class="listas ps-0 d-flex flex-column align-items-center lista-ser">
                    <% favoritos.servicio.forEach(servicio=> { %>
                        <li class="opc">
                            <div
                                class="tarjeta justify-content-around tarjeta-sma card d-flex align-items-center mb-5 p-2 rounded-4">
                                <button class="btn-fav btn align-self-start position-absolute p-0"><img
                                        src="./img/amor.png" alt="" class="icon-fav"></button>
                                <img src="data:image/jpeg;base64,<%= servicio.img64 %>" alt="" class="foto rounded-4 mb-2">
                                <p
                                    class="nombre z-1 w-100 text-center text-light fs-5 fw-bold mb-2 pb-2 border-bottom border-2 border-light">
                                    <%= servicio.servicio %>
                                </p>
                                <p class="desc fw-light z-1 card-text text-break text-light text-center">
                                    <%= servicio.descripcion %>
                                </p>
                            </div>
                        </li>
                        <% }); %>
                </ul>
                <% } else { %>
                    <p class="w-100 text-center text-white fs-5 mt-5 pt-5">No existen servicios favoritos.</p>
                    <% } %>
        </section>
        <!-- Lista de ofertas -->
        <section class="oferta col-md-6 col-lg-3">
            <h2 class="titulo mb-4 text-center titulo text-light fw-bold">Ofertas</h2>
            <% if (favoritos.oferta && favoritos.oferta.length> 0) { %>
                <ul class="listas ps-0 d-flex flex-column align-items-center lista-prod">
                    <% favoritos.oferta.forEach(oferta=> { %>
                        <li class="opc">
                            <div
                                class="tarjeta justify-content-around tarjeta-sma card d-flex align-items-center mb-5 p-2 rounded-4">
                                <button class="btn-fav btn align-self-start position-absolute p-0"><img
                                        src="./img/amor.png" alt="" class="icon-fav"></button>
                                <img src="data:image/jpeg;base64,<%= oferta.img64 %>" alt="" class="foto rounded-4 mb-2">
                                <p
                                    class="nombre z-1 w-100 text-center text-light fs-5 fw-bold mb-2 pb-2 border-bottom border-2 border-light">
                                    <%= oferta.productos %>
                                </p>
                                <p class="desc fw-light z-1 card-text text-break text-light text-center">
                                    <%= oferta.descripcion %>
                                </p>
                            </div>
                        </li>
                        <% }); %>
                </ul>
                <% } else { %>
                    <p class="w-100 text-center text-white fs-5 mt-5 pt-5">No existen ofertas favoritas.</p>
                    <% } %>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script>
        const imgOfe = `data:image/jpeg;base64,${document.getElementById('perimagenOfe').value}`;
        const fotomostrarOfe = document.getElementById('fotomostrarOfe');
        fotomostrarOfe.src = imgOfe;

        const imgPro = `data:image/jpeg;base64,${document.getElementById('perimagenPro').value}`;
        const fotomostrarPro = document.getElementById('fotomostrarPro');
        fotomostrarPro.src = imgPro;

        const imgSer = `data:image/jpeg;base64,${document.getElementById('perimagenSer').value}`;
        const fotomostrarSer = document.getElementById('fotomostrarSer');
        fotomostrarSer.src = imgSer;

        const imgBar = `data:image/jpeg;base64,${document.getElementById('perimagenBar').value}`;
        const fotomostrarBar = document.getElementById('fotomostrarBar');
        fotomostrarBar.src = imgBar;
    </script>
</body>

</html>